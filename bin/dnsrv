### Modules ###
use strict;
use IO::Socket;
use Net::hostent;    
use Getopt::Long;
use Switch;
use Data::Dumper;
use File::Copy;
use Cwd 'abs_path';
use File::Basename;
use XML::Simple;
#
### Version Details ###
my $MAJOR = 0;
my $MINOR = 0;
my $RELEASE = 1;
my @ver = ($MAJOR, $MINOR, $RELEASE);
#
############## Start Globals #######################
### Globals ###
my ($kbexe, $kbhome) =fileparse(abs_path($0));
$kbhome =~ s/\/bin\///;
my $kbdir = $kbhome;
my $debug=0;
my $command;
my $option;
my $version;
my $user = getlogin();
my @kbfiles;
my $config;

### Command Line Options ###
GetOptions( "debug+"=>\$debug,
            "command:s",\$command,
            "xconfig:s",\$config,
            "option:s",\$option,
            "directory:s",\$kbdir,
            "version",\$version);


