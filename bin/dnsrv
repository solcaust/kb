#!/bin/sh -- # -*- perl -*-
#
# eval statement to find and execute perl
#
eval '
if [ -x /usr/local/bin/perl ]
then
	exec /usr/local/bin/perl $0 ${1+"$@"} ;
elif [ -x /usr/bin/perl ]
then
	exec /usr/bin/perl $0 ${1+"$@"} ;
fi'	
if 0;
